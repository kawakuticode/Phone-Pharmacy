<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    card_view:cardCornerRadius="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--  ListRow Left sied Thumbnail image -->
        <FrameLayout
            android:id="@+id/med_img_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:foreground="@drawable/border"
            android:foregroundGravity="center"
            android:padding="16dp"

            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/medicine_img"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:src="@drawable/farmacy" />
        </FrameLayout>

        <TextView
            android:id="@+id/medicine_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/med_img_layout"
            android:paddingBottom="10dp"
            android:text="Cloroquina"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/med_desc_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/medicine_item_name"
            android:layout_centerVertical="true"
            android:paddingTop="20dp"
            android:text="headache" />

        <TextView
            android:id="@+id/exp_date_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:paddingRight="10dp"
            android:text="12-05-2017" />


    </RelativeLayout>







</android.support.v7.widget.CardView>